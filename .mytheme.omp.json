{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "console_title_template": "{{ .Folder }}",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "diamond",
                    "leading_diamond": "<#da8ee7>{</>",
                    "trailing_diamond": "<#da8ee7>}</>",
                    "template": " \ue5ff {{ .Path }} ",
                    "properties": {
                        "folder_icon": "\uf07b",
                        "folder_separator_icon": " \uf444 ",
                        "home_icon": "\udb80\udedc",
                        "style": "agnoster_short"
                    },
                    "background": "transparent",
                    "foreground": "#da8ee7",
                    "Text": "",
                    "Duration": 0,
                    "NameLength": 0
                },
                {
                    "type": "time",
                    "style": "diamond",
                    "template": " <#EFDCF9>at</> {{ .CurrentDate | date .Format }}",
                    "properties": {
                        "time_format": "15:04:05"
                    },
                    "background": "",
                    "foreground": "#da8ee7",
                    "Text": "",
                    "Duration": 0,
                    "NameLength": 0
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "dotnet",
                    "style": "diamond",
                    "foreground": "#EFDCF9",
                    "background": "#4c1f5e",
                    "template": " \udb80\udf1b {{ .Major}}.{{.Minor}}.{{.Patch}}",
                    "properties": {
                        "display_mode": "files"
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}",
                    "properties": {
                        "branch_icon": "\ue725 ",
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true,
                        "fetch_worktree_count": true
                    },
                    "background": "#69307A",
                    "foreground": "#EFDCF9",
                    "Text": "",
                    "Duration": 0,
                    "NameLength": 0
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "status",
                    "style": "plain",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#ef5350{{ end }}"
                    ],
                    "template": " \uf21e  ",
                    "properties": {
                        "always_enabled": true
                    },
                    "background": "",
                    "foreground": "#EFDCF9",
                    "Text": "",
                    "Duration": 0,
                    "NameLength": 0
                }
            ],
            "transient_prompt": {
                "template": "\ue285 ",
                "background": "transparent",
                "foreground": "#FEF5ED",
                "Text": "",
                "Duration": 0,
                "NameLength": 0
            }
        }
    ]
}
